	 public static byte charToByteAscii(char ch){  
	        byte byteAscii = (byte)ch;  
	          
	        return byteAscii;  
	    }
	public static void read() {
		try {
			PdfReader pdfReader = new PdfReader("/Users/wyx/Documents/风控管理.pdf");
			PdfStamper stamer = new PdfStamper(pdfReader,new FileOutputStream("/Users/wyx/Documents/test.pdf"));
			AcroFields af = stamer.getAcroFields();
			 BaseFont baseFontChinese = BaseFont.createFont("STSong-Light", "UniGB-UCS2-H", BaseFont.NOT_EMBEDDED);
			af.setField("NAME", "小青龙");
			af.setFieldProperty("NAME","textfont",baseFontChinese,null);
			stamer.setFormFlattening(true);
			stamer.close();
			pdfReader.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	public static void create(String str) {
		Document d = new Document();  
		FileOutputStream os = null;
	    try {  
	    		File file = new File("/Users/wyx/Documents/test1.pdf");
	    		if(!file.exists()) {
	    			file.createNewFile();
	    		}
	        os = new FileOutputStream(file);  
	        PdfWriter.getInstance(d, os);  
	        d.open();  
	        
	        BaseFont baseFontChinese = BaseFont.createFont("STSong-Light", "UniGB-UCS2-H", BaseFont.NOT_EMBEDDED);
	        
	        Paragraph para = new Paragraph();
	        Font fontChinese =  new  Font(baseFontChinese , 14 , Font.NORMAL);
	        para.setFont(fontChinese);
	        //标题  
	        Chunk chunk = new Chunk("这是一个标题");  
	        para.add(chunk); 
	        para.setAlignment(Element.ALIGN_CENTER);
	        
	        Paragraph pa = new Paragraph();
	        pa.setFont(fontChinese);
	        Chunk chunk1 = new Chunk(str);  
	        pa.add(chunk1);
	        d.add(para);  
	        d.add(pa);
	    } catch (Exception e) {  
	        // TODO Auto-generated catch block  
	        e.printStackTrace();  
	    } finally {  
	        d.close();  
	    }  
	}
	
